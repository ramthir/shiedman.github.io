{% if site.safe and site.BASE_PATH and site.BASE_PATH != '' %}
  {% assign BASE_PATH = site.BASE_PATH %}
  {% assign HOME_PATH = site.BASE_PATH %}
{% else %}
  {% assign BASE_PATH = nil %}
  {% assign HOME_PATH = "/" %}
{% endif %}

{% if site.ASSET_PATH %}
  {% assign ASSET_PATH = site.ASSET_PATH %}
{% else %}
  {% capture ASSET_PATH %}{{ BASE_PATH }}/assets{% endcapture %}
{% endif %}  


{% if page.description %}
    <meta name="description" content="{{ page.description }}">
{% endif %}
{% if page.noindex %}
    <meta name="googlebot" content="noindex">
{% endif %}
<meta name="author" content="{{ site.author.name }}">
{% if page.title %}
    <title>{{ page.title }}</title>
{% else %}
    <title>{{ site.title }}</title>
{% endif %}

{% comment %}
<!-- less -->
<link rel="stylesheet/less" type="text/css" href="{{ ASSET_PATH }}/less/site.less">
<!--link rel="shortcut icon" href="/favicon.ico"-->
<script src="{{ ASSET_PATH }}/js/less-1.5.0.min.js" type="text/javascript"></script>
{% endcomment %}

<!-- for development only -->
{% comment %}
<link href="{{ ASSET_PATH }}/css/bootstrap.css" rel="stylesheet" title="theme">
<link href="{{ ASSET_PATH }}/css/syntax-highlights.css" rel="stylesheet" title="theme">
{% endcomment %}
<link href="{{ ASSET_PATH }}/css/site.css" rel="stylesheet" title="theme">

